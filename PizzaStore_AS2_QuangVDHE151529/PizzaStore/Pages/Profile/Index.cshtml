@page
@model PizzaStore.Pages.Profile.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Profile</h1>
<form method="post">
    <div class="modal-body">
        <input name="Action" type="hidden" value="EDIT" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Customer.CustomerId" />
        <div class="form-group">
            <label asp-for="@Model.Customer.ContactName" class="control-label"></label>
            <input asp-for="@Model.Customer.ContactName" class="form-control" />
            <span asp-validation-for="@Model.Customer.ContactName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Customer.Password" class="control-label"></label>
            <input asp-for="@Model.Customer.Password" class="form-control" type="password" />
            <span asp-validation-for="@Model.Customer.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Customer.Address" class="control-label"></label>
            <input asp-for="@Model.Customer.Address" class="form-control" />
            <span asp-validation-for="@Model.Customer.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Customer.Phone" class="control-label"></label>
            <input asp-for="@Model.Customer.Phone" class="form-control" />
            <span asp-validation-for="@Model.Customer.Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save change" class="btn btn-primary" />
    </div>
</form>

<h1>Your recent order</h1>
<p>
    <a asp-page="/Cart/Index">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Freight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShipAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Freight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
